@{
    ViewData["Title"] = "Toplantı Oluştur";
}

@model List<UserMeetingDto>

<div class="container">
    <a asp-controller="Home" asp-action="CreateMeeting" class="btn btn-outline-success">Toplantı Oluştur</a>

    @if (Model == null)
    {
        <div class="mb-5 alert alert-warning" role="alert">
            Listelenecek toplantı bulunamadı
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Durum</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">Başlangıç Tarihi</th>
                    <th scope="col">Bitiş Tarihi</th>
                    <th scope="col" colspan="2">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (item, index) in Model.Select((value, i) => (value, i + 1)))
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@item.Title</td>
                        <td>@(item.Status ? "Aktif" : "Pasif")</td>
                        <td>@item.Description</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td><a href="@item.DocumentPath" class="btn btn-secondary btn-sm">Doküman İndir</a></td>
                        <td><button type="button" class="btn btn-danger btn-sm cancel-btn" data-id="@item.Id" @(!item.Status ? "disabled" : "")>İptal Et</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 <script>
    $(document).ready(function () {
        $(".cancel-btn").click(function () {
            var meetingId = $(this).data("id");
            $.ajax({
                url: "/Home/CancelMeeting?id=" + meetingId,
                type: "POST",
                success: function (response) {
                    alert("Toplantı başarıyla iptal edildi!");
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.log(xhr, status, error)
                }
            });
        });
    });
</script>