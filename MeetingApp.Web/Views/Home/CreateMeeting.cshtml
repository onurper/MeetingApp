@{
    ViewData["Title"] = "Toplantı Oluştur";
}
@model CreateMeetingViewModel

@{
    var defaultStartDate = DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm");
    var defaultEndDate = DateTime.Now.AddDays(1).AddHours(1).ToString("yyyy-MM-ddTHH:mm");
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 w-50">
        <h3 class="text-center text-primary mb-4"><i class="bi bi-calendar-plus"></i> Toplantı Oluştur</h3>

        <form method="post" asp-controller="Home" asp-action="CreateMeeting" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Toplantı başlığını girin">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="3" placeholder="Toplantı açıklaması girin"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Document" class="form-label fw-bold">Doküman Yükle</label>
                <input type="file" class="form-control" asp-for="Document"@*  accept=".pdf,.docx,.xlsx,.pptx" *@>
                <span class="text-danger" asp-validation-for="Document"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label fw-bold">Başlangıç Tarihi</label>
                    <input type="datetime-local" class="form-control" value="@defaultStartDate" asp-for="StartDate">
                    <span class="text-danger" asp-validation-for="StartDate"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label fw-bold">Bitiş Tarihi</label>
                    <input type="datetime-local" class="form-control" min="@defaultStartDate" value="@defaultEndDate" asp-for="EndDate">
                    <span class="text-danger" asp-validation-for="EndDate"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Home/GetUserMeetings" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Toplantı Listesine Dön</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
