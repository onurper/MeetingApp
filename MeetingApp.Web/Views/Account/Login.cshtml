@{
    ViewData["Title"] = "Giriş Yap";
}
@model MeetingApp.Web.ViewModels.LoginViewModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 w-50">
        <h3 class="text-center text-primary mb-4"><i class="bi bi-person-circle"></i> Giriş Yap</h3>

        <form method="post" asp-controller="Account" asp-action="Login">
            @if (!ViewData.ModelState.IsValid)
            {
                foreach (var item in ViewData.ModelState)
                {
                    if (item.Key == "")
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    }
                }
            }

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Eposta</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" asp-for="Email" placeholder="E-posta adresinizi girin">
                </div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi girin">
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Account/Register" class="btn btn-outline-success"><i class="bi bi-person-plus"></i> Kayıt Ol</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right"></i> Giriş Yap</button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">