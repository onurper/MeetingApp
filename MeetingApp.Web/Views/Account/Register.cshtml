@{
    ViewData["Title"] = "Kayıt Ol";
}
@model MeetingApp.Web.ViewModels.CreateUserViewModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 w-50">
        <h3 class="text-center text-primary mb-4"><i class="bi bi-person-plus"></i> Kayıt Ol</h3>

        <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">İsim *</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Adınızı girin">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Surname" class="form-label fw-bold">Soyisim *</label>
                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınızı girin">
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Eposta *</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" asp-for="Email" placeholder="E-posta adresinizi girin">
                </div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Şifre *</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi girin">
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Telefon *</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                    <input type="tel" class="form-control" asp-for="Phone" placeholder="+905551234567">
                </div>
                <span class="text-danger" asp-validation-for="Phone"></span>
                <small class="text-muted">
                    Lütfen telefon numaranızı aşağıdaki formatlarda giriniz: <br>
                    - Türkiye: <strong>+905551234567</strong> veya <strong>05551234567</strong> <br>
                    Boşluk ve özel karakter (örn. `-`, `()`) kullanmayın.
                </small>
            </div>

            <div class="mb-3">
                <label asp-for="ProfileImageFile" class="form-label fw-bold">Profil Resmi *</label>
                <input type="file" class="form-control" asp-for="ProfileImageFile" accept="image/*">
                <span class="text-danger" asp-validation-for="ProfileImageFile"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Account/Login" class="btn btn-outline-success"><i class="bi bi-box-arrow-in-left"></i> Giriş Sayfasına Git</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-person-check"></i> Kayıt Ol</button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
