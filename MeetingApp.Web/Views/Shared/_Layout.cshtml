@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var image = string.Empty;
    @if (User.Identity.IsAuthenticated)
    {
        image = User.Claims.Where(x => x.Type == "ProfileImage").Select(x => x.Value).FirstOrDefault().Replace("\\", "//");
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeetingApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeetingApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MeetingApp.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Meeting">Toplantılarım</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link text-dark" onclick="document.getElementById('logoutForm').submit();">Çıkış Yap</a>
                            </li>
                            <li class="nav-item">
                                <picture>
                                    <source srcset="https://localhost:7196/@(User.Claims.Where(x => x.Type == "ProfileImage").Select(x => x.Value).FirstOrDefault().Replace("\\", "//"))" type="image/svg+xml">
                                    <img src="https://localhost:7196/@(User.Claims.Where(x => x.Type == "ProfileImage").Select(x => x.Value).FirstOrDefault().Replace("\\", "//"))" class="img-fluid img-thumbnail" alt="..." style="height: 40px; width:50px">
                                </picture>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <form id="logoutForm" method="post" asp-controller="Account" asp-action="Logout" style="display: none;">
    </form>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MeetingApp.Web - <a asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
